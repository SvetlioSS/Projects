@model BugTrackingSystem.Web.Models.AddBugViewModel
@{
    ViewBag.Title = "BugManagement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add bug</h2>

@using (Html.BeginForm("AddBug", "Home", FormMethod.Post, new { role = "form" }))
{
    @Html.HiddenFor(pageInfo => pageInfo.BugStartingIndex)
    @Html.HiddenFor(pageInfo => pageInfo.Page)
    @Html.HiddenFor(pageInfo => pageInfo.TotalPages)
    @Html.HiddenFor(pageInfo => pageInfo.ShowDetails)
    <div class="form-group">
        @Html.Label("Name") 
        @Html.TextBox("Name", null, new { @class = "form-control" })
    </div>
    <div class="form-group">        
        @Html.Label("Priority")
        @Html.DropDownList("Priority",
            new[] 
            {
                new SelectListItem() { Text = "Low", Value = "0" },
                new SelectListItem() { Text = "Medium", Value = "1" },
                new SelectListItem() { Text = "High", Value = "2" }
            },
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Description")
        @Html.TextArea("Description", new { @class = "form-control" })
    </div>
    <input type="submit" value="Add bug" class="btn btn-primary"/>
}


